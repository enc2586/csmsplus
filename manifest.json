{
  "manifest_version": 3,
  "name": "CSMS+",
  "version": "2.1.0",
  "description": "Enhance your LMS experience",
  "permissions": [
    "downloads",
    "storage"
  ],
  "action": {
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background/background.js"
  },
  "host_permissions": [
    "https://lms.gist.ac.kr/*",
    "https://doc.coursemos.co.kr/*"
  ],
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://lms.gist.ac.kr/local/ubdoc/*"
      ],
      "js": [
        "src/features/pdf-downloader/pdf-lib.min.js",
        "src/features/pdf-downloader/content.js"
      ],
      "css": [
        "src/features/pdf-downloader/styles.css"
      ]
    },
    {
      "matches": [
        "https://lms.gist.ac.kr/course/view.php*"
      ],
      "js": [
        "src/features/assignment-tracker/content-scripts/tracker-config.js",
        "src/features/assignment-tracker/content-scripts/tracker-utils.js",
        "src/features/assignment-tracker/content-scripts/tracker-api.js",
        "src/features/assignment-tracker/content-scripts/tracker-ui.js",
        "src/features/assignment-tracker/content-scripts/tracker-dashboard.js",
        "src/features/assignment-tracker/content-scripts/tracker-main.js"
      ],
      "css": [
        "src/features/assignment-tracker/styles/assignment-styles.css"
      ]
    },
    {
      "matches": [
        "https://lms.gist.ac.kr/",
        "https://lms.gist.ac.kr/index.php*"
      ],
      "js": [
        "src/features/assignment-tracker/content-scripts/course-list-parser.js"
      ],
      "css": [
        "src/features/assignment-tracker/styles/course-stats-styles.css"
      ]
    },
    {
      "matches": [
        "https://lms.gist.ac.kr/mod/assign/view.php*"
      ],
      "js": [
        "src/features/assignment-tracker/content-scripts/assignment-cache-updater.js"
      ]
    }
  ],
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}